{
  "typescript": {
    "arrowFunction.useParentheses": "force",
    "binaryExpression.operatorPosition": "sameLine",
    "jsx.quoteStyle": "preferDouble",
    "quoteProps": "asNeeded",
    "quoteStyle": "alwaysSingle",
    "semiColons": "always",
    "trailingCommas": "onlyMultiLine"
  },
  "markup": {
    "printWidth": 140
  },
  "excludes": [
    "**/*-lock.json",
    "**/node_modules",
    ".direnv",
    ".svelte-kit",
    ".vscode",
    "pgdata",
    "src/app.css",
    "src/lib/styled-system",
    "src/routes/third-party/licenses.json",
    "vite.config.ts.timestamp-*"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.89.3.wasm",
    "https://plugins.dprint.dev/json-0.19.1.wasm",
    "https://plugins.dprint.dev/markdown-0.16.3.wasm",
    "https://plugins.dprint.dev/disrupted/css-0.2.3.wasm",
    "https://plugins.dprint.dev/g-plane/markup_fmt-v0.5.1.wasm",
    "https://plugins.dprint.dev/g-plane/malva-v0.1.5.wasm"
  ]
}
